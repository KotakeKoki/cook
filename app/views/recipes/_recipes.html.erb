<% if recipes.any? %>
  <div class="row">
    <% recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="card">
         <div class="card-img-top"><img class="img-fluid" alt="recipe image" <%= image_tag (recipe.image.url)%>
          <h5 class="card-title"><%= link_to recipe.title,recipe_path(recipe.id) %></h5>
          <p class="card-text"><%= recipe.ingridient_1 %> <%= recipe.ingridient_2 %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %> 
<%= paginate recipes %>