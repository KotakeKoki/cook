<h1>レシピ編集ページ</h1>

 <%= form_with(model: @recipe, local: true)do |f| %>
 <%= render 'layouts/error_messages', model: f.object %>
 <div class="form-group">
 <%= f.label :image, "写真" %>
 <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
 </div>
  
  <div class="form-group">
  <%= f.label :title, "レシピ名" %>
  <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
  <%= f.label :ingridient_1, "材料1" %>
  <%= f.text_field :ingridient_1 %>
  </div>
  
  <div class="form-group">
  <%= f.label :ingridient_2, "材料2" %>
  <%= f.text_field :ingridient_2 %>
  </div>
  
  <div class="form-group">
  <%= f.label :description, "このレシピの特徴" %>
  <%= f.text_area :description %>
  </div>
  
  <div class="form-group">
  <%= f.label :sentence, "作り方" %>
  <%= f.text_area :sentence %>
  </div>
  
  <%= f.submit "投稿" %>
  <% end %>
  
  <%= link_to "レシピに戻る",recipe_path %>