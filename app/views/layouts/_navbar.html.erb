<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#FBB305;">
    <a class="navbar-brand" href="/">限界メシ.com</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul id="nav" class="navbar-nav">
        <% if logged_in? %>
          <li class="nav-item mb-0">
          <%= form_tag search_path, :method => 'get' do %>
          <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil %>
          </p>
          <% end %></li>
        <li class="nav-item"><%= link_to "タイムライン",tl_user_path(current_user) %></li>
        <li class="nav-item"><%= link_to "ユーザー情報編集",edit_user_path(current_user) %></li>
        <li class="nav-item"><%= link_to "マイページ",user_path(current_user) %></li>
        <li class="nav-item"><%= link_to "レシピの投稿",new_recipe_path %></li>
        <li class="nav-item"><%= link_to "ログアウト",logout_path, method: :delete %></li>
        <% else %>
          <li class="nav-item mb-0">
          <%= form_tag search_path, :method => 'get' do %>
          <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil %>
          </p>
          <% end %></li>
          <li class="nav-item"><%= link_to "新規登録",signup_path %></li>
          <li class="nav-item"><%= link_to "ログイン",login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>